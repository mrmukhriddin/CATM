<?xml version="1.0" encoding="utf-8"?>
<ru.metasharks.catm.core.ui.view.LabeledWrapper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:label="Организация">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/input_date"
            style="@style/OutlinedEditText.OneLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="3"
            android:layout_marginEnd="8dp"
            android:hint="ДД.ММ.ГГГГ"
            android:imeOptions="actionDone"
            android:inputType="date" />

        <EditText
            android:id="@+id/input_time"
            style="@style/OutlinedEditText.OneLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:hint="00:00"
            android:imeOptions="actionDone"
            android:inputType="datetime" />

    </GridLayout>

</ru.metasharks.catm.core.ui.view.LabeledWrapper>
