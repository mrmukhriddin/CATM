<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded_corners_clickable"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/number_on_list"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/background_number_on_list"
        android:gravity="center"
        android:textAppearance="@style/Text.H5"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/Text.H5"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number_on_list"
        app:layout_constraintTop_toTopOf="@id/number_on_list"
        tools:text="Опасные производственные факторы" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/Text.P3"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/number_on_list"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="работы на участках, на которых имеется или может возникнуть опасность, связанная с выполнением опасных работ на смежных участках" />


</androidx.constraintlayout.widget.ConstraintLayout>
