<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.DefaultHint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Menu">
        <item name="android:fontFamily">@font/museo_sans_cyrl_500</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Menu.Active">
        <item name="android:textColor">@color/menu_item_active_color</item>
    </style>

    <style name="Text.Menu.Inactive">
        <item name="android:textColor">@color/menu_item_inactive_color</item>
    </style>

    <style name="Text">
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:fontFamily">@font/museo_sans_cyrl_300</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/museo_sans_cyrl_700</item>
    </style>

    <style name="Text.ButtonTextStyle">
        <item name="android:fontFamily">@font/museo_sans_cyrl_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.H2">
        <item name="android:fontFamily">@font/museo_sans_cyrl_700</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Text.H4">
        <item name="android:fontFamily">@font/museo_sans_cyrl_700</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.H5">
        <item name="android:fontFamily">@font/museo_sans_cyrl_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.P1">
        <item name="android:fontFamily">@font/museo_sans_cyrl_500</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.P2">
        <item name="android:fontFamily">@font/museo_sans_cyrl_500</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.P3">
        <item name="android:fontFamily">@font/museo_sans_cyrl_500</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.P4">
        <item name="android:fontFamily">@font/museo_sans_cyrl_500</item>
        <item name="android:textColor">@color/light_gray</item>
