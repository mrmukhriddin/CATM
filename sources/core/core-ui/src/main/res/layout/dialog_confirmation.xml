<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_confirmation"
    android:paddingHorizontal="24dp"
    android:paddingVertical="24dp">

    <TextView
        android:id="@+id/cd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:text="PLACEHOLDER TEXT"
        android:textAppearance="@style/Text.H4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cd_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:text="PLACEHOLDER TEXT PLACEHOLDER TEXT PLACEHOLDER TEXT PLACEHOLDER TEXT "
        android:textAppearance="@style/Text.P2"
        app:layout_constraintTop_toBottomOf="@id/cd_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cd_primary_action"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="PLACEHOLDER PRIMARY"
        app:layout_constraintTop_toBottomOf="@id/cd_message" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cd_secondary_action"
        style="@style/OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PLACEHOLDER SECONDARY"
        app:layout_constraintTop_toBottomOf="@id/cd_primary_action" />

</androidx.constraintlayout.widget.ConstraintLayout>
